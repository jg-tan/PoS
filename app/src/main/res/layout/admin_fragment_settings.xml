<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/admin_settings_btn_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439" />

    <Button
        android:id="@+id/admin_settings_btn_change_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Change Password"
        app:layout_constraintEnd_toEndOf="@+id/admin_settings_btn_lock"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/admin_settings_btn_lock"
        app:layout_constraintTop_toBottomOf="@+id/admin_settings_btn_lock" />

    <!-- TEMP -->
    <Button
        android:id="@+id/TEMP_CLEAR_DEVICE_OWNER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:text="REMOVE DEVICE OWNER TEMP"
        app:layout_constraintEnd_toEndOf="@+id/admin_settings_btn_lock"
        app:layout_constraintStart_toStartOf="@+id/admin_settings_btn_lock"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- TEMP -->

</androidx.constraintlayout.widget.ConstraintLayout>