<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/rounded_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/shop_grid_iv_item_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_settings_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shop_grid_tv_item_price"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="@string/shop_fragment_grid_item_price_placeholder"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_grid_tv_item_name" />

    <TextView
        android:id="@+id/shop_grid_tv_item_name"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/shop_fragment_grid_item_name_placeholder"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_grid_iv_item_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>