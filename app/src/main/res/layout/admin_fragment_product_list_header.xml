<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/admin_adapter_product_list_margin_start_end"
    android:layout_marginTop="@dimen/admin_adapter_product_list_margin_top_bottom"
    android:layout_marginEnd="@dimen/admin_adapter_product_list_margin_start_end"
    android:layout_marginBottom="@dimen/admin_adapter_product_list_margin_top_bottom"
    android:paddingBottom="@dimen/admin_adapter_product_list_padding_bottom">

    <TextView
        android:id="@+id/admin_product_list_tv_item_name"
        android:layout_width="@dimen/admin_fragment_product_list_item_name_width"
        android:layout_height="@dimen/admin_fragment_product_list_header_box_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="@string/shop_fragment_cart_item_name"
        android:textSize="@dimen/admin_fragment_product_list_text_size"
        app:layout_constraintStart_toEndOf="@+id/admin_product_list_iv_item_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/admin_product_list_tv_item_price"
        android:layout_width="@dimen/admin_fragment_product_list_item_price_width"
        android:layout_height="@dimen/admin_fragment_product_list_header_box_height"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/shop_fragment_cart_item_price_single"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/admin_product_list_tv_item_name"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/admin_product_list_btn_delete"
        android:layout_width="@dimen/admin_fragment_product_list_button_remove_size"
        android:layout_height="@dimen/admin_fragment_product_list_header_box_height"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:src="@drawable/ic_delete_black"
        android:text="@string/shop_fragment_cart_item_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/admin_product_list_tv_item_price"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/admin_product_list_iv_item_icon"
        android:layout_width="@dimen/admin_fragment_product_list_icon_size"
        android:layout_height="@dimen/admin_fragment_product_list_header_box_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>