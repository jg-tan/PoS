<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_tv_pw_label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:text="Enter Password : "
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialog_et_pw"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_tv_pw_label"
        app:layout_constraintStart_toEndOf="@+id/dialog_tv_pw_label"
        app:layout_constraintTop_toTopOf="@+id/dialog_tv_pw_label"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/dialog_btn_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="CHANGE PASSWORD"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_et_pw" />

</androidx.constraintlayout.widget.ConstraintLayout>