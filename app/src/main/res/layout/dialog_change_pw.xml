<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_tv_cur_pw_label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:text="Current Password : "
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_tv_new_pw_label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:padding="4dp"
        android:text="New Password : "
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dialog_tv_cur_pw_label"
        app:layout_constraintTop_toBottomOf="@+id/dialog_tv_cur_pw_label" />

    <TextView
        android:id="@+id/dialog_tv_confirm_pw_label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:padding="4dp"
        android:text="Confirm Password : "
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dialog_tv_new_pw_label"
        app:layout_constraintTop_toBottomOf="@+id/dialog_tv_new_pw_label" />

    <EditText
        android:id="@+id/dialog_et_cur_pw"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_tv_cur_pw_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dialog_tv_cur_pw_label"
        app:layout_constraintTop_toTopOf="@+id/dialog_tv_cur_pw_label"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/dialog_et_new_pw"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_et_confirm_pw"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/dialog_tv_confirm_pw_label"
        app:layout_constraintTop_toBottomOf="@+id/dialog_et_confirm_pw" />

    <EditText
        android:id="@+id/dialog_et_confirm_pw"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_et_cur_pw"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/dialog_tv_new_pw_label"
        app:layout_constraintTop_toBottomOf="@+id/dialog_et_cur_pw" />

    <Button
        android:id="@+id/dialog_btn_change_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:text="CHANGE PASSWORD"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_et_new_pw"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/dialog_et_new_pw"
        app:layout_constraintTop_toBottomOf="@+id/dialog_et_new_pw" />

</androidx.constraintlayout.widget.ConstraintLayout>