<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/admin_sales_list_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:padding="3dp"
        android:text="12/01/2020"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/admin_sales_list_tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:padding="3dp"
        android:text="Item Name"
        app:layout_constraintBottom_toBottomOf="@+id/admin_sales_list_tv_time"
        app:layout_constraintStart_toEndOf="@+id/admin_sales_list_tv_time"
        app:layout_constraintTop_toTopOf="@+id/admin_sales_list_tv_time"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/admin_sales_list_price_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:padding="3dp"
        android:text="Total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/admin_sales_list_tv_item_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:padding="3dp"
        android:text="Qty"
        app:layout_constraintBottom_toBottomOf="@+id/admin_sales_list_price_total"
        app:layout_constraintEnd_toStartOf="@+id/admin_sales_list_price_total"
        app:layout_constraintTop_toTopOf="@+id/admin_sales_list_price_total"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/admin_sales_list_tv_price_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:padding="3dp"
        android:text="Price"
        app:layout_constraintBottom_toBottomOf="@+id/admin_sales_list_tv_item_qty"
        app:layout_constraintEnd_toStartOf="@+id/admin_sales_list_tv_item_qty"
        app:layout_constraintTop_toTopOf="@+id/admin_sales_list_tv_item_qty"
        app:layout_constraintVertical_bias="0.0" />

    <View
        style="@style/Divider"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_sales_list_tv_item_name"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>